# Environment variables for production deployment
# Copy this file to .env.local and update with your values

# Database (Railway PostgreSQL or other)
DATABASE_URL="postgresql://postgres:password@containers-us-west-xxx.railway.app:5432/railway"

# NextAuth
NEXTAUTH_URL="https://twoja-domena.up.railway.app"
# Generate a secret with: `openssl rand -base64 32`
NEXTAUTH_SECRET="twoj_bezpieczny_sekret"

# OAuth providers - Google
# To get these credentials:
# 1. Go to Google Cloud Console: https://console.cloud.google.com/
# 2. Create a new project or select an existing one
# 3. Go to "APIs & Services" > "Credentials"
# 4. Click "Create Credentials" > "OAuth client ID"
# 5. Select application type "Web application"
# 6. Add redirect URL: https://twoja-domena.up.railway.app/api/auth/callback/google
# 7. Click "Create" and copy Client ID and Client Secret
GOOGLE_CLIENT_ID="google_client_id_produkcyjny"
GOOGLE_CLIENT_SECRET="google_client_secret_produkcyjny" 